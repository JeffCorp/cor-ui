{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist/types",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react",
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "target": "es5",
    "esModuleInterop": true,
    "declarationMap": true
  }
}
